<div class="page-header"></div>

<div class="row">
  <div class="col-md-12">

<% @photos.each do |photo| %>
<div class="panel panel-default col-md-8 col-md-offset-2">
  <div class="panel-heading">
    <%= photo.user.username %>
    <small> | <%= time_ago_in_words(photo.created_at) %> ago</small>
  </div>
  <div class="panel-body">
    <img src="<%= photo.image %>" width="400">
    <br>
    <% if photo.likes.where(user_id: current_user.id).present? %>
      <a href="/delete_like/<%=photo.likes.where(user_id: current_user.id)[0].id%>" class="btn btn-link">
              <i class="fa fa-heart"></i>
      </a>
    <% else  %>
      <form action="/create_like" method="post">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <input type="hidden" name="photo_id" value="<%=photo.id%>">
      <input type="hidden" name="user_id" value="<%=current_user.id%>">
      <button class="btn btn-link"><i class="fa fa-heart-o"></i></button>
    <% end  %>
    <br>
    <p><%= photo.caption %></p>
    <br>
    <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>
    <% if photo.user_id==current_user.id %>
    <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
    <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
    <% end  %>
  </div>
</div>
<% end %>
  </div>
</div>
