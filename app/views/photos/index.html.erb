<div class="page-header"></div>
<div class="col-md-8 col-md-offset-2">
  <a href="/photos/new" class="btn btn-default btn-block">
    <i class="fa fa-plus"></i>
  </a>

  <hr>
</div>

<% @photos.each do |photo| %>
<div class="panel panel-default col-md-8 col-md-offset-2">
  <div class="panel-heading">
    <%= photo.user.username %>
    <small> | <%= time_ago_in_words(photo.created_at) %> ago</small>
  </div>
  <div class="panel-body">
    <img src="<%= photo.image %>" width="400">
    <br>
    <% if photo.likes.where(user_id: current_user.id).present? %>
      <a href="/delete_like/<%=photo.likes.where(user_id: current_user.id)[0].id%>" class="btn btn-link">
              <i class="fa fa-heart"></i>
      </a>
    <% else  %>
      <form action="/create_like" method="post">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <input type="hidden" name="photo_id" value="<%=photo.id%>">
      <input type="hidden" name="user_id" value="<%=current_user.id%>">
      <button class="btn btn-link"><i class="fa fa-heart-o"></i></button>
      </form>
    <% end  %>
    <br>
    <ul class="media-list">
      <% photo.comments.each do |comment| %>
      <li class="media">
        <div class="media-body">
          <h6 class="media-heading">
            <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a>
            <small> | <%= time_ago_in_words(comment.created_at) %> ago
            <% if comment.user_id==current_user.id %>
              <a href="/delete_comment/<%= comment.id %>"><i class="fa fa-trash"></i></a>
            <% end %>
            </small>
          </h6>
          <%= comment.body %>
        </div>
      </li>
      <% end  %>
      <li class="media">
        <div class="media-body">
          <form action="/create_comment" method="post" _lpchecked="1">
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            <input type="hidden" name="photo_id" value="<%=photo.id%>">
            <input type="hidden" name="user_id" value="<%=current_user.id%>">
            <!-- Label and input for body -->
            <div class="form-group">
              <label for="body" class="sr-only">Body</label>
              <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" required="">
            </div>
            <button class="btn btn-link"><i class="fa fa-commenting-o"></i></button>
          </form>
        </div>
      </li>
    </ul>
    <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>
    <% if photo.user_id==current_user.id %>
    <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
    <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
    <% end  %>
  </div>
</div>
<% end %>



